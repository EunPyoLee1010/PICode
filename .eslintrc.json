{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "ignorePatterns": [
        "**/node_modules",
        "**/dist",
        "*.json",
        "*.md"
    ],
    "rules": {
        "prettier/prettier": [
            "error", 
            {
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "trailingComma": "es5"
            }
        ]
    }
}
